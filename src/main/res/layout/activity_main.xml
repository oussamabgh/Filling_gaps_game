<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="720dp">

        <TextView
            android:id="@+id/letter1"
            android:layout_width="30dp"
            android:layout_height="40dp"

            android:layout_marginLeft="80dp"
            android:layout_marginTop="75dp"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/letter2"
            android:layout_width="25dp"
            android:layout_height="55dp"


            android:layout_toRightOf="@id/letter1"
            android:textSize="30dp"
            android:hint="\?"
            android:layout_marginTop="73dp"
            />
        <EditText
            android:id="@+id/letter3"
            android:layout_width="25dp"
            android:layout_height="55dp"

            android:hint="\?"
            android:textSize="30dp"
            android:layout_toRightOf="@id/letter2"
            android:layout_marginTop="73dp"
            android:layout_marginLeft="3dp"/>/>
        <TextView
            android:id="@+id/letter4"
            android:layout_width="30dp"
            android:layout_height="40dp"

            android:layout_toRightOf="@id/letter3"
            android:layout_marginTop="75dp"
            android:textSize="30dp"
            android:layout_marginLeft="3dp"/>/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/letter4"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="7dp"
            android:text=">>"
            />

        <ImageView
            android:id="@+id/correct"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/letter1"
            android:layout_alignLeft="@+id/letter1"
            android:layout_alignTop="@+id/button"
            android:layout_alignEnd="@+id/letter3"
            android:layout_alignRight="@+id/letter3"
            android:layout_alignBottom="@+id/button"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="-96dp"
            android:layout_marginRight="-96dp"
            android:layout_marginBottom="-154dp"
            android:src="@drawable/correct"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/incorrect"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/letter2"
            android:layout_alignLeft="@+id/letter2"
            android:layout_alignTop="@+id/button"
            android:layout_alignBottom="@+id/button"

            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="-118dp"
            android:layout_marginRight="-118dp"
            android:layout_marginBottom="-154dp"
            android:layout_toStartOf="@+id/letter3"
            android:layout_toLeftOf="@+id/letter3"
            android:src="@drawable/incorrect"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/nmbr"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/correct"
            android:layout_alignRight="@+id/correct"
            android:layout_alignBottom="@+id/correct"
            android:layout_marginEnd="-9dp"
            android:layout_marginRight="-9dp"
            android:layout_marginBottom="193dp"
            android:textSize="60dp"
            android:textStyle="bold">


        </TextView>
    </RelativeLayout>



</ScrollView>
